#!/bin/sh

cd $(dirname $0)/..

PROJ_DIR=${PROJ_DIR:-$(pwd)}

docker pull node:12-alpine

# Install node modules
docker run --rm -u $(id -u):$(id -g) -v $PROJ_DIR:/app --workdir /app node:12-alpine yarn install --non-interactive

# Build js
docker run --rm -u $(id -u):$(id -g) -v $PROJ_DIR:/app --workdir /app node:12-alpine ./node_modules/.bin/encore "$@"
